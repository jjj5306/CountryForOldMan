<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게 등록"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="32dp" />

    <!-- 가게 정보 입력 부분 포함 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp">

        <!-- 가게 이름 입력 -->
        <TextView
            android:id="@+id/textViewShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가게 이름"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/etShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="가게 이름 입력"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginTop="8dp"/>

        <!-- 전화번호 입력 -->
        <TextView
            android:id="@+id/textViewPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="전화번호 입력"
            android:inputType="phone"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginTop="8dp"/>

        <!-- 주소 입력 -->
        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="주소 입력"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영업시간"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="8dp">

            <!-- 시작 시간 부분 -->

            <EditText
                android:id="@+id/editTextStartHour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:hint="시"
                android:inputType="number"
                android:maxLength="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>

            <EditText
                android:id="@+id/editTextStartMinute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="작"
                android:background="@drawable/edittext_background"
                android:inputType="number"
                android:maxLength="2"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ "
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <!-- 종료 시간 부분 -->
            <EditText
                android:id="@+id/editTextEndHour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="종"
                android:background="@drawable/edittext_background"
                android:inputType="number"
                android:maxLength="2111"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>

            <EditText
                android:id="@+id/editTextEndMinute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="료"
                android:background="@drawable/edittext_background"
                android:inputType="number"
                android:maxLength="2"
                android:gravity="center"/>
        </LinearLayout>


        <!-- 카테고리 선택 -->
        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"/>


        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:entries="@array/category_array"/>

        <!--세부메뉴에 대한 spinner / visibility : gone 속성을 이용해서 View를 완전히 숨긴상태-->
        <Spinner
            android:id="@+id/spinnerSubCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:visibility="gone"/>

    </LinearLayout>

    <!-- 등록하기 버튼 -->

    <include layout="@layout/owner_registershop_shop_info" />

    <Button
        android:id="@+id/btnRegisterShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등록하기"
        android:backgroundTint="#007BFF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp" />

</LinearLayout>
